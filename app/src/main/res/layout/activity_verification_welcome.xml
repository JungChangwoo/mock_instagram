<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/activity_welcome_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instagram에 오신 것을 환영합니다."
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3"/>
    <TextView
        android:id="@+id/activity_welcome_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JungChangwoo30"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/activity_welcome_tv_title"
        app:layout_constraintStart_toStartOf="@id/activity_welcome_tv_title"
        app:layout_constraintEnd_toEndOf="@id/activity_welcome_tv_title"/>

    <TextView
        android:id="@+id/activity_welcome_tv_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="팔로우할 사람을 찾고 사진을 공유해보세요. 사용자 이름은 언제든지 변경할 수 있습니다."
        android:gravity="center"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/activity_welcome_tv_nickname"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_welcome_btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/login_login_btn_background"
        android:text="다음"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/activity_welcome_tv_instruction"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/activity_welcome_tv_change_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 이름 변경"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/facebook_color"
        app:layout_constraintTop_toBottomOf="@id/activity_welcome_btn_next"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/activity_welcome_btn_next"
        app:layout_constraintEnd_toEndOf="@id/activity_welcome_btn_next"/>

</androidx.constraintlayout.widget.ConstraintLayout>