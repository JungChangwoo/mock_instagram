<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_upload_picture_cancle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/instagram_cancle_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_upload_picture_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="새 게시물"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/activity_upload_picture_cancle"
        app:layout_constraintStart_toEndOf="@id/activity_upload_picture_cancle"
        app:layout_constraintTop_toTopOf="@id/activity_upload_picture_cancle" />

    <ImageView
        android:id="@+id/activity_upload_picture_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/facebook_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/activity_upload_picture_view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_picture_cancle"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/activity_upload_picture_tv_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="갤러리"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_picture_view1"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/instagram_more"
        app:layout_constraintStart_toEndOf="@id/activity_upload_picture_tv_gallery"
        app:layout_constraintTop_toTopOf="@id/activity_upload_picture_tv_gallery"
        app:layout_constraintBottom_toBottomOf="@id/activity_upload_picture_tv_gallery"
        android:layout_marginLeft="5dp"/>
    <GridView
        android:id="@+id/activity_upload_picture_gridview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_picture_tv_gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        android:numColumns="4"/>
</androidx.constraintlayout.widget.ConstraintLayout>