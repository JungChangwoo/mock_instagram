<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/activity_friends_iv_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:src="@drawable/instagram_friends_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"/>
    <TextView
        android:id="@+id/activity_friends_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:text="팔로우할 Facebook 친구찾기"
        android:textColor="@color/black"
        android:textSize="27dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/activity_friends_iv_friend"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/activity_friends_tv_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원님이 팔로우할 사람을 직접 선택하여, 회원님의 허락 없이는 Facebook에 게시되지 않습니다."
        android:textSize="14dp"
        android:gravity="center"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_friends_tv_title"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/activity_friends_ib_connect_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:src="@drawable/instagram_facebook_connect"
        android:background="@drawable/login_login_btn_background"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/activity_friends_tv_instruction"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/activity_friends_tv_connect_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:text="김민준, 김민수님 외 친구 142명이 Instagram을 사용 중입니다."
        android:textColor="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/activity_friends_ib_connect_facebook"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/activity_friends_tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="건너뛰기"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/facebook_color"
        app:layout_constraintTop_toBottomOf="@+id/activity_friends_tv_connect_instruction"
        app:layout_constraintStart_toStartOf="@id/activity_friends_tv_connect_instruction"
        app:layout_constraintEnd_toEndOf="@id/activity_friends_tv_connect_instruction"
        android:layout_marginTop="35dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>