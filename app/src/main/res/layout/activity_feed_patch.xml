<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageView
        android:id="@+id/fragment_feed_patch_iv_cancle"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:scaleType="fitXY"
        android:src="@drawable/instagram_cancle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/fragment_feed_patch_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정보 수정"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/fragment_feed_patch_iv_cancle"
        app:layout_constraintBottom_toBottomOf="@id/fragment_feed_patch_iv_cancle"
        app:layout_constraintStart_toEndOf="@id/fragment_feed_patch_iv_cancle"
        android:layout_marginLeft="25dp"/>
    <ImageView
        android:id="@+id/fragment_feed_patch_iv_check"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:scaleType="fitXY"
        android:src="@drawable/instagram_unactive_check"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_feed_patch_tv_title"
        app:layout_constraintBottom_toBottomOf="@id/fragment_feed_patch_tv_title"
        android:layout_marginRight="20dp"/>
    <ImageView
        android:id="@+id/fragment_feed_patch_iv_profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_feed_patch_iv_cancle"
        android:src="@drawable/instagram_mypage"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/fragment_feed_patch_tv_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zzenhu"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@id/fragment_feed_patch_tv_location"
        app:layout_constraintTop_toTopOf="@id/fragment_feed_patch_iv_profile"
        app:layout_constraintStart_toEndOf="@id/fragment_feed_patch_iv_profile"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/fragment_feed_patch_tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치 추가"
        android:textSize="12dp"
        android:textColor="@color/facebook_color"
        app:layout_constraintTop_toBottomOf="@id/fragment_feed_patch_tv_nickName"
        app:layout_constraintBottom_toBottomOf="@id/fragment_feed_patch_iv_profile"
        app:layout_constraintStart_toStartOf="@id/fragment_feed_patch_tv_nickName"/>

    <ImageView
        android:id="@+id/fragment_feed_patch_iv_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toBottomOf="@id/fragment_feed_patch_iv_profile"
        android:layout_marginTop="10dp"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/fragment_feed_patch_et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="문구 입력..."
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_feed_patch_iv_feed"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/facebook_color"/>



</androidx.constraintlayout.widget.ConstraintLayout>