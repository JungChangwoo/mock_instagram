<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageView
        android:id="@+id/activity_patch_nickName_iv_cancle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/instagram_cancle_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/activity_patch_nickName_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 편집"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/activity_patch_nickName_iv_cancle"
        app:layout_constraintTop_toTopOf="@id/activity_patch_nickName_iv_cancle"
        app:layout_constraintBottom_toBottomOf="@id/activity_patch_nickName_iv_cancle"
        android:layout_marginLeft="20dp"/>
    <ImageView
        android:id="@+id/activity_patch_nickName_iv_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/instagram_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_patch_nickName_iv_cancle"
        android:layout_marginRight="15dp"/>

    <ImageView
        android:id="@+id/activity_patch_nickName_iv_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/instagram_mypage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_patch_nickName_tv_title"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/activity_patch_nickName_tv_patch_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="프로필 사진 변경"
        android:textColor="@color/facebook_color"
        app:layout_constraintTop_toBottomOf="@id/activity_patch_nickName_iv_profile"
        app:layout_constraintStart_toStartOf="@id/activity_patch_nickName_iv_profile"
        app:layout_constraintEnd_toEndOf="@id/activity_patch_nickName_iv_profile"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/activity_patch_nickName_tv_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/activity_patch_nickName_tv_patch_profile"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>
    <EditText
        android:id="@+id/activity_patch_nickName_et_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="changwoo"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/activity_patch_nickName_tv_Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_patch_nickName_tv_Name"
        android:layout_marginRight="15dp"/>


    <TextView
        android:id="@+id/activity_patch_nickName_tv_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 이름"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/activity_patch_nickName_et_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
    <EditText
        android:id="@+id/activity_patch_nickName_et_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="jungchangwowo"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/activity_patch_nickName_tv_nickName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_patch_nickName_tv_nickName"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/activity_patch_nickName_tv_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="웹사이트"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/activity_patch_nickName_et_nickname"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"/>
    <EditText
        android:id="@+id/activity_patch_nickName_et_website"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/activity_patch_nickName_tv_website"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_patch_nickName_tv_website"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/activity_patch_nickName_tv_introdution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소개"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/activity_patch_nickName_et_website"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"/>
    <EditText
        android:id="@+id/activity_patch_nickName_et_introdution"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/activity_patch_nickName_tv_introdution"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_patch_nickName_tv_introdution"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/activity_patch_nickName_tv_professional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로페셔널 계정으로 전환"
        android:textColor="@color/facebook_color"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_patch_nickName_et_introdution"
        app:layout_constraintStart_toStartOf="@id/activity_patch_nickName_et_introdution"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/activity_patch_nickName_tv_private_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인 정보 설정"
        android:textSize="17dp"
        android:textColor="@color/facebook_color"
        app:layout_constraintTop_toBottomOf="@id/activity_patch_nickName_tv_professional"
        app:layout_constraintStart_toStartOf="@id/activity_patch_nickName_tv_professional"
        android:layout_marginTop="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>