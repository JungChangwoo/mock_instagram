<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/search_item_iv_profile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="7dp"
        android:layout_marginLeft="17dp"/>
    <TextView
        android:id="@+id/search_item_tv_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:text="jungchangwoo"
        app:layout_constraintTop_toTopOf="@id/search_item_iv_profile"
        app:layout_constraintBottom_toTopOf="@id/search_item_tv_name"
        app:layout_constraintStart_toEndOf="@id/search_item_iv_profile"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/search_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정창우"
        android:textSize="13dp"
        android:textColor="@color/darkgray"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/search_item_tv_nickName"
        app:layout_constraintStart_toStartOf="@id/search_item_tv_nickName"
        app:layout_constraintBottom_toBottomOf="@id/search_item_iv_profile"/>

</androidx.constraintlayout.widget.ConstraintLayout>