<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/home_feed_item_iv_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/home_feed_item_tv_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JUNGChangwoo"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/home_feed_item_iv_profile"
        app:layout_constraintTop_toTopOf="@id/home_feed_item_iv_profile"
        app:layout_constraintBottom_toBottomOf="@id/home_feed_item_iv_profile"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="13dp"/>

    <ImageView
        android:id="@+id/home_feed_item_iv_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/instagram_option"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_feed_item_iv_profile"
        app:layout_constraintBottom_toBottomOf="@id/home_feed_item_iv_profile"
        android:layout_marginRight="5dp"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/home_feed_item_viewPager2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/home_feed_item_iv_profile"
        android:layout_marginTop="10dp"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/home_feed_item_tablayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabPaddingStart="5dp"
        app:tabPaddingEnd="5dp"
        app:tabIndicatorHeight="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/home_feed_item_viewPager2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/home_feed_item_iv_like"
        android:layout_width="27dp"
        android:layout_height="27dp"
        app:layout_constraintTop_toBottomOf="@id/home_feed_item_viewPager2"
        android:src="@drawable/instagram_history"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/home_feed_item_iv_comment"
        android:layout_width="27dp"
        android:layout_height="27dp"
        app:layout_constraintStart_toEndOf="@id/home_feed_item_iv_like"
        app:layout_constraintTop_toTopOf="@id/home_feed_item_iv_like"
        app:layout_constraintBottom_toBottomOf="@id/home_feed_item_iv_like"
        android:src="@drawable/instagram_comment"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/home_feed_item_iv_feed_dm"
        android:layout_width="27dp"
        android:layout_height="27dp"
        app:layout_constraintStart_toEndOf="@+id/home_feed_item_iv_comment"
        app:layout_constraintTop_toTopOf="@id/home_feed_item_iv_comment"
        app:layout_constraintBottom_toBottomOf="@id/home_feed_item_iv_comment"
        android:src="@drawable/instagram_dm"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/home_feed_item_iv_collection"
        android:layout_width="27dp"
        android:layout_height="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_feed_item_iv_feed_dm"
        app:layout_constraintBottom_toBottomOf="@id/home_feed_item_iv_feed_dm"
        android:src="@drawable/instagram_collection"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/home_feed_item_tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/home_feed_item_iv_like"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/home_feed_item_tv_likeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32,567"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/home_feed_item_tv_like"
        app:layout_constraintTop_toTopOf="@+id/home_feed_item_tv_like"
        app:layout_constraintBottom_toBottomOf="@id/home_feed_item_tv_like"
        android:layout_marginLeft="3dp"/>
    <TextView
        android:id="@+id/home_feed_item_tv_likeUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/home_feed_item_tv_likeNum"
        app:layout_constraintTop_toTopOf="@id/home_feed_item_tv_likeNum"
        app:layout_constraintBottom_toBottomOf="@id/home_feed_item_tv_likeNum"/>
    <TextView
        android:id="@+id/home_feed_item_tv_content_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="giriboy91"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/home_feed_item_tv_like"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/home_feed_item_tv_content_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ddddddddddddddddddddddddddddddddddddddddddddddddddddd"
        android:textSize="14dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_feed_item_tv_content_nickName"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:id="@+id/home_feed_item_tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/home_feed_item_tv_content_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"/>
    <TextView
        android:id="@+id/home_feed_item_tv_commentNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="87"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@id/home_feed_item_tv_comment"
        app:layout_constraintTop_toTopOf="@id/home_feed_item_tv_comment"
        app:layout_constraintBottom_toBottomOf="@id/home_feed_item_tv_comment"
        android:layout_marginLeft="2dp"/>
    <TextView
        android:id="@+id/home_feed_item_tv_comment_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개 모두 보기"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@id/home_feed_item_tv_commentNum"
        app:layout_constraintTop_toTopOf="@id/home_feed_item_tv_comment"
        app:layout_constraintBottom_toBottomOf="@id/home_feed_item_tv_comment" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dd"
        android:textSize="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/home_feed_item_tv_comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/home_feed_item_tv_comment"/>




</androidx.constraintlayout.widget.ConstraintLayout>