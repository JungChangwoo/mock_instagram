<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageView
        android:id="@+id/activity_profile_iv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/instagram_camera"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/activity_profile_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 사진 추가"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/activity_profile_iv_camera"
        app:layout_constraintEnd_toEndOf="@id/activity_profile_iv_camera"
        app:layout_constraintTop_toBottomOf="@id/activity_profile_iv_camera"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/activity_profile_tv_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:text="친구들이 알아볼 수 있도록 프로필 사진을 추가하세요."
        android:textSize="15dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/activity_profile_tv_title"
        app:layout_constraintEnd_toEndOf="@id/activity_profile_tv_title"
        app:layout_constraintTop_toBottomOf="@id/activity_profile_tv_title"
        android:layout_marginTop="25dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_profile_btn_add_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사진 추가"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@drawable/login_login_btn_background"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_profile_tv_instruction"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/activity_profile_tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="건너뛰기"
        android:textSize="15dp"
        android:textColor="@color/facebook_color"
        app:layout_constraintStart_toStartOf="@id/activity_profile_btn_add_profile"
        app:layout_constraintEnd_toEndOf="@id/activity_profile_btn_add_profile"
        app:layout_constraintTop_toBottomOf="@id/activity_profile_btn_add_profile"
        android:layout_marginTop="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>