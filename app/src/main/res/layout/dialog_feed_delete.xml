<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/dialog_feed_delete_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이 게시물을\n삭제하시겠어요?"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/dialog_feed_delete_tv_instruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="30일 이내에 설정> 계정> 최근 삭제 항목에서 이 게시물을 복원할 수 있습니다. 30일이 지나면 영구 삭제 됩니다."
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_feed_delete_tv_title"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"/>
    <View
        android:id="@+id/dialog_feed_delete_View1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_feed_delete_tv_instruction"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/dialog_feed_delete_tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@color/facebook_color"
        android:text="삭제"
        android:textStyle="bold"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/dialog_feed_delete_View1"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/dialog_feed_delete_View2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_feed_delete_tv_delete"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/dialog_feed_delete_tv_not_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제 안 함"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_feed_delete_View2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="10dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>