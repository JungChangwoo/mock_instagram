<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/activity_upload_iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/instagram_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_upload_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 게시물"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/activity_upload_iv_back"
        app:layout_constraintBottom_toBottomOf="@id/activity_upload_iv_back"
        app:layout_constraintStart_toEndOf="@id/activity_upload_iv_back"
        android:layout_marginLeft="30dp"/>
    <ImageView
        android:id="@+id/activity_upload_iv_check"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/instagram_check"
        app:layout_constraintTop_toTopOf="@id/activity_upload_tv_title"
        app:layout_constraintBottom_toBottomOf="@id/activity_upload_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:id="@+id/activity_upload_iv_feed"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/instagram_feed1"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_iv_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/activity_upload_et_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:hint="문구 입력..."
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/activity_upload_iv_feed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_upload_iv_feed"
        app:layout_constraintBottom_toBottomOf="@id/activity_upload_iv_feed"
        android:background="@drawable/edititext_just_white"/>
    <View
        android:id="@+id/activity_upload_view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_iv_feed"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/activity_upload_tv_tag_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사람 태그하기"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_view1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <View
        android:id="@+id/activity_upload_view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_tv_tag_people"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/activity_upload_tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치 추가"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_view2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <View
        android:id="@+id/activity_upload_view3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_tv_location"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/activity_upload_chip1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="서울"
        android:textSize="13dp"
        android:textColor="@color/darkgray"
        android:background="@drawable/edittext_rounded_background"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_view3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/activity_upload_chip2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="서초네이처힐"
        android:textSize="13dp"
        android:textColor="@color/darkgray"
        android:background="@drawable/edittext_rounded_background"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_view3"
        app:layout_constraintStart_toEndOf="@id/activity_upload_chip1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/activity_upload_chip3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="양재시민의숲어딘가"
        android:textSize="13dp"
        android:textColor="@color/darkgray"
        android:background="@drawable/edittext_rounded_background"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_view3"
        app:layout_constraintStart_toEndOf="@id/activity_upload_chip2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="강남구 양재동"
        android:textSize="13dp"
        android:textColor="@color/darkgray"
        android:background="@drawable/edittext_rounded_background"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_view3"
        app:layout_constraintStart_toEndOf="@+id/activity_upload_chip3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <View
        android:id="@+id/activity_upload_view4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_chip1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/activity_upload_tv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다른 미디어에도 게시"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_view4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/activity_upload_tv_Facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_tv_other"
        app:layout_constraintStart_toStartOf="@id/activity_upload_tv_other"
        android:layout_marginTop="15dp"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/activity_upload_tv_Facebook"
        app:layout_constraintBottom_toBottomOf="@id/activity_upload_tv_Facebook"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/activity_upload_tv_Twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twitter"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_tv_Facebook"
        app:layout_constraintStart_toStartOf="@id/activity_upload_tv_Facebook"
        android:layout_marginTop="15dp"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/activity_upload_tv_Twitter"
        app:layout_constraintBottom_toBottomOf="@id/activity_upload_tv_Twitter"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/activity_upload_tv_Tumblr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tumblr"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_tv_Twitter"
        app:layout_constraintStart_toStartOf="@id/activity_upload_tv_Twitter"
        android:layout_marginTop="15dp"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/activity_upload_tv_Tumblr"
        app:layout_constraintBottom_toBottomOf="@id/activity_upload_tv_Tumblr"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="15dp"/>

    <View
        android:id="@+id/activity_upload_view5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_tv_Tumblr"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고급 설정"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/activity_upload_view5"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>