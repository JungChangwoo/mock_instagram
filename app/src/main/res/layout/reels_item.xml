<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/reels_itme_iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/reels_itme_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reels"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/reels_itme_iv_camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/reels_camera"
            app:layout_constraintTop_toTopOf="@id/reels_itme_tv_title"
            app:layout_constraintBottom_toBottomOf="@id/reels_itme_tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="15dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reels_itme_iv_profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toTopOf="@+id/reels_itme_tv_content"
            android:layout_marginBottom="5dp"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintStart_toStartOf="@id/reels_itme_tv_title"/>
        <TextView
            android:id="@+id/reels_itme_tv_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cahngwoo"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/reels_itme_iv_profile"
            app:layout_constraintBottom_toBottomOf="@id/reels_itme_iv_profile"
            app:layout_constraintStart_toEndOf="@id/reels_itme_iv_profile"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/reels_itme_tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팔로우"
            android:textSize="14dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/reels_itme_tv_nickName"
            app:layout_constraintBottom_toBottomOf="@id/reels_itme_tv_nickName"
            app:layout_constraintStart_toEndOf="@id/reels_itme_tv_nickName"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/reels_itme_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이번에도 밤에 별바람이 분다..."
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@id/reels_itme_iv_audio"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="@id/reels_itme_iv_profile"
            android:textColor="@color/lightgray"/>
        <ImageView
            android:id="@+id/reels_itme_iv_audio"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/reels_audio"
            app:layout_constraintBottom_toTopOf="@id/reels_itme_iv_like"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@id/reels_itme_tv_content"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/reels_itme_tv_marquee"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="로제 · On The Ground 로제 · On The Ground"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:focusable="true"
            android:singleLine="true"
            app:layout_constraintTop_toTopOf="@id/reels_itme_iv_audio"
            app:layout_constraintBottom_toBottomOf="@id/reels_itme_iv_audio"
            app:layout_constraintStart_toEndOf="@id/reels_itme_iv_audio"/>
        <ImageView
            android:id="@+id/reels_itme_iv_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/reels_like"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/reels_itme_iv_audio"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:id="@+id/reels_itme_iv_chat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/reels_chat"
            app:layout_constraintTop_toTopOf="@id/reels_itme_iv_like"
            app:layout_constraintBottom_toBottomOf="@id/reels_itme_iv_like"
            app:layout_constraintStart_toEndOf="@+id/reels_itme_iv_like"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:id="@+id/reels_itme_iv_dm"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/reels_dm"
            app:layout_constraintTop_toTopOf="@+id/reels_itme_iv_like"
            app:layout_constraintBottom_toBottomOf="@id/reels_itme_iv_like"
            app:layout_constraintStart_toEndOf="@id/reels_itme_iv_chat"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:id="@+id/reels_itme_iv_option"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/reels_option"
            app:layout_constraintTop_toTopOf="@id/reels_itme_iv_like"
            app:layout_constraintBottom_toBottomOf="@id/reels_itme_iv_like"
            app:layout_constraintStart_toEndOf="@id/reels_itme_iv_dm"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/reels_like"
            android:layout_marginRight="2dp"
            app:layout_constraintEnd_toStartOf="@id/reels_itme_tv_likeNum"
            app:layout_constraintTop_toTopOf="@id/reels_itme_iv_like"
            app:layout_constraintBottom_toBottomOf="@id/reels_itme_iv_like"/>


        <TextView
            android:id="@+id/reels_itme_tv_likeNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8,854"
            android:textColor="@color/lightgray"
            android:textSize="13dp"
            app:layout_constraintTop_toTopOf="@id/reels_itme_iv_like"
            app:layout_constraintBottom_toBottomOf="@id/reels_itme_iv_like"
            app:layout_constraintEnd_toStartOf="@id/reels_item_iv_chatNum"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/reels_item_iv_chatNum"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/reels_chat"
            app:layout_constraintTop_toTopOf="@id/reels_itme_iv_like"
            app:layout_constraintBottom_toBottomOf="@id/reels_itme_iv_like"
            app:layout_constraintEnd_toStartOf="@id/reels_itme_tv_chatNum"
            android:layout_marginRight="2dp"/>
        <TextView
            android:id="@+id/reels_itme_tv_chatNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="155"
            android:textSize="13dp"
            android:textColor="@color/lightgray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/reels_itme_iv_like"
            app:layout_constraintBottom_toBottomOf="@id/reels_itme_iv_like"
            android:layout_marginRight="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>