<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comments_item_iv_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/instagram_mypage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/comments_item_tv_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nickName"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@id/comments_item_iv_profile"
        app:layout_constraintStart_toEndOf="@id/comments_item_iv_profile"
        app:layout_constraintBottom_toTopOf="@id/comments_item_tv_time"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/comments_item_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ddkdddddddddddddddddddddddddd"
        android:textSize="14dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/comments_item_tv_nickName"
        app:layout_constraintTop_toTopOf="@id/comments_item_tv_nickName"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/comments_item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2일"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/comments_item_tv_nickName"
        app:layout_constraintStart_toStartOf="@id/comments_item_tv_nickName"
        app:layout_constraintBottom_toBottomOf="@id/comments_item_iv_profile"/>
    <TextView
        android:id="@+id/comments_item_tv_recomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="답글 달기"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="@id/comments_item_tv_time"
        app:layout_constraintBottom_toBottomOf="@id/comments_item_tv_time"
        app:layout_constraintStart_toEndOf="@id/comments_item_tv_time"
        android:layout_marginLeft="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>