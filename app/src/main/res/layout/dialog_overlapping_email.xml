<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_default_background">

    <TextView
        android:id="@+id/dialog_overlapping_email_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="다른 계정에서 사용 중인\n이메일 주소입니다"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_overlapping_email_tv_instruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="이 이메일 주소와 연결된 계정에 로그인하거나 이메일 주소를 사용하여 새 계정을 만들 수 있습니다."
        android:textSize="13dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_overlapping_email_tv_title"
        app:layout_constraintStart_toStartOf="@id/dialog_overlapping_email_tv_title"
        app:layout_constraintEnd_toEndOf="@id/dialog_overlapping_email_tv_title"/>
    <View
        android:id="@+id/dialog_overlapping_email_view1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        app:layout_constraintTop_toBottomOf="@id/dialog_overlapping_email_tv_instruction"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/dialog_overlapping_email_tv_alreay_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기존 계정으로 로그인"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/facebook_color"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/dialog_overlapping_email_view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/dialog_overlapping_email_view2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        app:layout_constraintTop_toBottomOf="@id/dialog_overlapping_email_tv_alreay_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/dialog_overlapping_email_tv_new_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로운 계정 만들기"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/dialog_overlapping_email_view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="10dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>