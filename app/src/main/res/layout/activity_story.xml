<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">
    <ImageView
        android:id="@+id/activity_story_iv_story"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/instagram_story_background2"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activity_story_et_message" />
    <ProgressBar
        android:id="@+id/activity_story_progress"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:progressDrawable="@drawable/progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activity_story_profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/creyoon"
        app:layout_constraintTop_toBottomOf="@id/activity_story_progress"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/activity_story_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="creyoon"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/activity_story_profile"
        app:layout_constraintBottom_toBottomOf="@id/activity_story_profile"
        app:layout_constraintStart_toEndOf="@id/activity_story_profile"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/activity_story_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3시간"
        android:textSize="13dp"
        android:textColor="@color/lightgray"
        app:layout_constraintTop_toTopOf="@id/activity_story_nickName"
        app:layout_constraintBottom_toBottomOf="@id/activity_story_nickName"
        app:layout_constraintStart_toEndOf="@id/activity_story_nickName"
        android:layout_marginLeft="7dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:adjustViewBounds="true"
        android:src="@drawable/story_option"
        app:layout_constraintTop_toTopOf="@id/activity_story_profile"
        app:layout_constraintBottom_toBottomOf="@id/activity_story_profile"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"/>
    <EditText
        android:id="@+id/activity_story_et_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:background="@drawable/story_edittext_background"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:hint="메세지 보내기"
        android:paddingLeft="20dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/activity_story_dm"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/activity_story_iv_story"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"/>
    <ImageView
        android:id="@+id/activity_story_dm"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/story_dm"
        app:layout_constraintTop_toTopOf="@id/activity_story_et_message"
        app:layout_constraintBottom_toBottomOf="@id/activity_story_et_message"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>