<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_sheet_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_hideable = "true"
    android:background="@color/white"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageView
        android:id="@+id/bottom_sheet_dialog_iv_scroll"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/instagram_bottomsheet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/bottom_sheet_dialog_tv_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신고..."
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_dialog_iv_scroll"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/bottom_sheet_dialog_tv_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시물 알림 설정"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_dialog_tv_report"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_dialog_tv_report"/>
    <TextView
        android:id="@+id/bottom_sheet_dialog_tv_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="링크 복사"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_dialog_tv_alarm"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_dialog_tv_alarm"
        android:layout_marginTop="24dp"/>
    <TextView
        android:id="@+id/bottom_sheet_dialog_tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공유하기..."
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_dialog_tv_link"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_dialog_tv_link"
        android:layout_marginTop="24dp"/>
    <TextView
        android:id="@+id/bottom_sheet_dialog_tv_unfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로우 취소"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_dialog_tv_share"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_dialog_tv_share"
        android:layout_marginTop="24dp"/>
    <TextView
        android:id="@+id/bottom_sheet_dialog_tv_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="숨기기"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_dialog_tv_unfollow"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_dialog_tv_unfollow"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"/>


    <TextView
        android:id="@+id/bottom_sheet_dialog_tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보관"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_dialog_tv_share"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_dialog_tv_share"
        android:layout_marginTop="24dp"/>
    <TextView
        android:id="@+id/bottom_sheet_dialog_tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_dialog_tv_save"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_dialog_tv_save"
        android:layout_marginTop="24dp"/>
    <TextView
        android:id="@+id/bottom_sheet_dialog_tv_patch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_dialog_tv_delete"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_dialog_tv_delete"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/bottom_sheet_dialog_tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글 기능 해제"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_dialog_tv_patch"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_dialog_tv_patch"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>