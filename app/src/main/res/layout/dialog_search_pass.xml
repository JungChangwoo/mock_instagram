<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/dialog_default_background">
    <TextView
        android:id="@+id/dialog_search_pass_tv_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        android:text="Instagram은 친구들과 함께할수록\n즐겁습니다. 게시물을 보고 싶은\n친구를 팔로우해보세요. 이 단계를 \n건너뛰시겠어요?"
        android:textSize="14dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/dialog_search_pass_view1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_search_pass_tv_instruction"/>
    <TextView
        android:id="@+id/dialog_search_pass_tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구 찾기"
        android:textSize="15dp"
        android:textColor="@color/facebook_color"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_search_pass_view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/dialog_search_pass_view2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_search_pass_tv_search"/>
    <TextView
        android:id="@+id/dialog_search_pass_tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="건너뛰기"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginVertical="15dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_search_pass_view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>