<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_email_email_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_edittext_background">
        <EditText
            android:id="@+id/fragment_email_emailinput_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:paddingVertical="14dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="1dp"
            android:background="@drawable/edittext_default_background"/>
        <ImageButton
            android:id="@+id/fragment_email_ib_delete"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/delete_icon"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:background="#F6F6F6"
            android:layout_gravity="center"
            android:layout_marginRight="17dp"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/fragment_email_tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="올바른 이메일 주소를 입력하세요."
        android:textSize="12dp"
        android:textColor="#FF0000"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>
    <Button
        android:id="@+id/fragment_email_btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_next"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/unactive_facebook_color" />
</LinearLayout>