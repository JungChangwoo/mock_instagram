<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <ImageView
        android:id="@+id/activity_comments_iv_back"
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:src="@drawable/instagram_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/activity_comments_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/activity_comments_iv_back"
        app:layout_constraintTop_toTopOf="@id/activity_comments_iv_back"
        app:layout_constraintBottom_toBottomOf="@id/activity_comments_iv_back"
        android:layout_marginLeft="30dp"/>
    <ImageView
        android:id="@+id/activity_comments_iv_dm"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/instagram_dm"
        app:layout_constraintTop_toTopOf="@id/activity_comments_iv_back"
        app:layout_constraintBottom_toBottomOf="@id/activity_comments_iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="15dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activity_comments_iv_writer_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/instagram_mypage"
        app:layout_constraintTop_toBottomOf="@+id/activity_comments_iv_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/activity_comments_tv_writer_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nickName"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@id/activity_comments_iv_writer_profile"
        app:layout_constraintStart_toEndOf="@id/activity_comments_iv_writer_profile"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/activity_comments_tv_writer_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dddddddddddddddddd"
        android:textSize="14dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/activity_comments_tv_writer_nickName"
        app:layout_constraintTop_toTopOf="@id/activity_comments_tv_writer_nickName"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/activity_comments_tv_writer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4시간"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/activity_comments_tv_writer_nickName"
        app:layout_constraintStart_toStartOf="@id/activity_comments_tv_writer_nickName"/>
    <TextView
        android:id="@+id/activity_comments_tv_writer_recomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="답글 달기"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="@id/activity_comments_tv_writer_time"
        app:layout_constraintStart_toEndOf="@id/activity_comments_tv_writer_time"
        android:layout_marginLeft="20dp"/>
    <View
        android:id="@+id/activity_comments_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        app:layout_constraintTop_toBottomOf="@id/activity_comments_iv_writer_profile"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_comments_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_comments_view"
        app:layout_constraintBottom_toTopOf="@+id/activity_comments_view2"
        tools:listitem="@layout/comments_item"/>
    <View
        android:id="@+id/activity_comments_view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        app:layout_constraintBottom_toTopOf="@id/activity_comments_iv_comment_writer_profile"
        android:layout_marginBottom="10dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activity_comments_iv_comment_writer_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/instagram_mypage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/activity_comments_iv_comment_writer_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="댓글 달기..."
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/activity_comments_iv_comment_writer_profile"
        app:layout_constraintTop_toTopOf="@id/activity_comments_iv_comment_writer_profile"
        app:layout_constraintEnd_toStartOf="@id/activity_comments_tv_comment_writer_post"
        app:layout_constraintBottom_toBottomOf="@id/activity_comments_iv_comment_writer_profile"
        android:layout_marginRight="10dp"
        android:background="@drawable/edititext_just_white"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/activity_comments_tv_comment_writer_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시"
        android:textSize="15dp"
        android:textColor="@color/unactive_facebook_color"
        app:layout_constraintTop_toTopOf="@id/activity_comments_iv_comment_writer_content"
        app:layout_constraintBottom_toBottomOf="@id/activity_comments_iv_comment_writer_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>