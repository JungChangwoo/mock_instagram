<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_home"
        layout="@layout/toolbar_home"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_home"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">
            <HorizontalScrollView
                android:id="@+id/fragment_main_storyScrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/fragment_main_story0"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/story0"
                            android:layout_marginLeft="7dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="내 스토리"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="13dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/fragment_main_story1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/story1"
                            android:layout_marginLeft="7dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="youndae112"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="13dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/fragment_main_story2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/story2"
                            android:layout_marginLeft="7dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="creyoon"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="13dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/fragment_main_story3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/story3"
                            android:layout_marginLeft="7dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="learnUp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="13dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/fragment_main_story4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/story4"
                            android:layout_marginLeft="7dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="heeseung"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="13dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/fragment_main_story5"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/story5"
                            android:layout_marginLeft="7dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="physical_gallery"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="13dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/fragment_main_story6"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/story6"
                            android:layout_marginLeft="7dp"/>
